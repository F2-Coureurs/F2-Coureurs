<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<Pane id="select-driver" stylesheets="@style.css"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/8">

    <!-- settings-quit -->
    <Button id="red" layoutY="925" layoutX="1300" text="Cancel" />
    <Button id="green" layoutY="925" layoutX="1580" text="Save" />

    <!-- Select new team member-->
    <Pane layoutX="120" layoutY="80" prefHeight="200" prefWidth="550" styleClass="block">
        <Label layoutX="30" layoutY="20" styleClass="title" text="Edit team"/>
        <Label layoutX="30" layoutY="120" styleClass="content" text="Select new team member"/>
        <ImageView fitHeight="100" fitWidth="100" layoutX="400" layoutY="20">
            <Image url="@../media/icons/team.png"/>
        </ImageView>
    </Pane>

    <!--Current driver1-->
    <Pane layoutX="770" layoutY="20" prefHeight="300" prefWidth="500" styleClass="block">
        <Label layoutX="30" layoutY="-30" styleClass="option"  text="Kevin Magnussen" />

        <HBox spacing="-60" layoutX="30" layoutY="80" styleClass="content">
            <VBox spacing="-25" alignment="BASELINE_LEFT">
                <Label text="Salary:" />
                <Label text="Speed:" />
                <Label text="Racecraft:" />
                <Label text="Strategy insight:" />
            </VBox>
            <VBox spacing="-25" alignment="BASELINE_RIGHT">
                <Label text="€8,000" />
                <Label text="5" />
                <Label text="4" />
                <Label text="5" />
            </VBox>
        </HBox>
    </Pane>

    <!--Current driver2-->
    <Pane layoutX="1300" layoutY="20" prefHeight="300" prefWidth="500" styleClass="block">
        <Label layoutX="30" layoutY="-30" styleClass="option"  text="Jolyon Palmer" />

        <HBox spacing="-60" layoutX="30" layoutY="80" styleClass="content">
            <VBox spacing="-25" alignment="BASELINE_LEFT">
                <Label text="Salary:" />
                <Label text="Speed:" />
                <Label text="Racecraft:" />
                <Label text="Strategy insight:" />
            </VBox>
            <VBox spacing="-25" alignment="BASELINE_RIGHT">
                <Label text="€40,000" />
                <Label text="5" />
                <Label text="8" />
                <Label text="6" />
            </VBox>
        </HBox>
    </Pane>

    <!--New Driver-->
    <Pane layoutX="1300" layoutY="350" prefHeight="380" prefWidth="500" styleClass="block">
        <Label layoutX="30" layoutY="-30" styleClass="option"  text="Nico Rosberg" />

        <HBox spacing="-60" layoutX="30" layoutY="100" styleClass="content">
            <VBox spacing="-25" alignment="BASELINE_LEFT">
                <Label text="Salary:" />
                <Label text="Speed:" />
                <Label text="Racecraft:" />
                <Label text="Strategy insight:" />
                <Label text="Current:" />
                <Label text="Points:" />
            </VBox>
            <VBox spacing="-25" alignment="BASELINE_RIGHT">
                <Label text="€1,000,000" />
                <Label text="9" />
                <Label text="9" />
                <Label text="8" />
                <Label text="Mercedes" />
                <Label text="18" />
            </VBox>
        </HBox>
    </Pane>

    <!--Driver table-->
    <Pane layoutX="120" layoutY="350" prefHeight="690" prefWidth="1150" styleClass="block">
        <Label layoutX="30" layoutY="20" styleClass="title" text="Drivers"/>
        <ImageView fitHeight="100" fitWidth="100" layoutX="1000" layoutY="20">
            <Image url="@../media/icons/driver.png"/>
        </ImageView>

        <TableView GridPane.columnIndex="0" GridPane.rowIndex="1"
                   layoutX="30" layoutY="110" prefHeight="560" prefWidth="1080" styleClass="table-view">
            <columns>
                <TableColumn prefWidth="220" text="Name">
                </TableColumn>
                <TableColumn prefWidth="220" text="Current team">
                </TableColumn>
                <TableColumn prefWidth="220" text="Salary">
                </TableColumn>
                <TableColumn prefWidth="220" text="Buyout clause">
                </TableColumn>
                <TableColumn prefWidth="220" text="Ability">
                </TableColumn>
            </columns>
        </TableView>
    </Pane>
</Pane>
