      xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.controllers.NewGameController"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="1080.0" prefWidth="1920.0">
    <!-- Title-->
    <Pane layoutX="80" layoutY="104" prefHeight="127" prefWidth="530" styleClass="block">
        <Label layoutX="30" layoutY="20" styleClass="title" text="New Game"/>
    </Pane>

    <!-- Two options-->
    <Button onAction="#create" layoutX="250" layoutY="440" styleClass="option" text="Create new team"/>
    <Button onAction="#existing" layoutX="1143" layoutY="440" styleClass="option" text="Use existing team"/>

</Pane>